my_notes = []
course_notes = {}
final_notes = {}
print("You can take min three courses which you entered above!")
no_subjects = int(input("How many subjects would you like to choose? "))          #  for j in range(0, 5)
print("You're gonna choose " + str(no_subjects) + " subjects")
if no_subjects >= 3 and no_subjects <= 5:
    for i in range(no_subjects):
        my_subjects = input('Enter the subject of an exam: ')
        my_notes = input('Enter your grade from this subject: ')
        course_notes[0] = my_subjects
        course_notes[my_subjects] = my_grades
    print(course_notes)
